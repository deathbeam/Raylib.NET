<Project>
  <ItemGroup Condition="'$(RuntimeIdentifier)' == 'browser-wasm'">
    <!-- WASM way of statically linking raylib -->
    <NativeFileReference Include="$(StaticPath)raylib.a"/>
    <!-- Auto include index.html and main.js for OOB experience -->
    <WasmExtraFilesToDeploy Include="$(StaticPath)index.html"/>
    <WasmExtraFilesToDeploy Include="$(StaticPath)main.js"/>
  </ItemGroup>
  <ItemGroup Condition="'$(PublishAot)' == 'true'">
    <!-- NativeAOT way of statically linking raylib -->
    <DirectPInvoke Include="raylib"/>
    <NativeLibrary Condition="'$(IsWindowsRuntime)' == 'true'" Include="$(StaticPath)raylib.lib"/>
    <NativeLibrary Condition="'$(IsWindowsRuntime)' != 'true'" Include="$(StaticPath)libraylib.a"/>
  </ItemGroup>
</Project>
