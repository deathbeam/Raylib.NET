<Project>
  <ItemGroup Condition="'$(RuntimeIdentifier)' == 'browser-wasm'">
    <!-- WASM way of statically linking raylib -->
    <NativeFileReference Include="$(OutputPath)raylib.a"/>
    <!-- Auto include index.html and main.js for OOB experience -->
    <WasmExtraFilesToDeploy Include="$(OutputPath)index.html"/>
    <WasmExtraFilesToDeploy Include="$(OutputPath)main.js"/>
  </ItemGroup>
  <ItemGroup Condition="'$(PublishAot)' == 'true'">
    <!-- NativeAOT way of statically linking raylib -->
    <DirectPInvoke Include="raylib"/>
    <NativeLibrary Include="$(OutputPath)libraylib.a"/>
  </ItemGroup>
</Project>
